{
  "manifest_version": 3,
  "name": "Brevify",
  "version": "1.0",
  "description": "Opens AI assistants with selected text and inputs it into the prompt box.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8888/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8888/*"
      ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["ai-service.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
